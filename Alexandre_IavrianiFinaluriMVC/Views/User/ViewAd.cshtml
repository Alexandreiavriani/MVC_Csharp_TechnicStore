@model Alexandre_IavrianiFinaluriMVC.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    td {
        padding: 20px;
    }
</style>





    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:550PX; height:450PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_des</p>
        </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.u_name  </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                    {

                        @Html.ActionLink("Delete this Product", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                    }
                </td>
            </tr>

        </table>



    </div>







</div>
